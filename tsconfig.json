{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "sourceMap": true,
    "lib": ["dom", "es2015"],
    "importHelpers": true,
    "strict": true,
    "types": ["node"],
    "typeRoots": ["types"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "app",
    "types"
  ],
  "exclude": [
    "node_modules",
    "hooks",
    "platforms"
  ]
}